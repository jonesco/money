generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  password  String
  watchlist Watchlist[]
}

model Watchlist {
  id              String   @id @default(uuid())
  user_id         String
  stock_symbol    String
  upper_threshold Float
  lower_threshold Float
  current_price   Float
  initial_price   Float
  last_updated    DateTime @default(now())
  user            User     @relation(fields: [user_id], references: [id])
}
